{% extends "layout.njk" %}

{% block content %}
<form class="card" method="POST" action="/teachers?_method=PUT" >
    <section class="avatar" style="background: url({{ teacher.avatar_url }}) no-repeat center center / cover"></section>
    <section class="details">

   <section class="details">

        <form id="form-submit" method="POST" action="/teachers?_method=PUT" >

            <h3>Editar professor</h3>

            {% include 'teachers/fields.njk' %}

            <button id="delete" type="submit" form="form-delete">Deletar</button>
            
            <input 
                type="hidden" 
                name="id" 
                value="{{ teacher.id }}"
                >
            

        </form>

        <form id="form-delete" action="/teachers?_method=DELETE" method="POST">
            <input type="hidden" name="id" value="{{ teacher.id }}">
        </form>

    </section>
</form>

{% include '../confirmation.njk' %}

{% endblock content %}