{% extends "layout.njk" %}

{% block content %}

<div class="card">
    <section 
        class="avatar" 
        style="background: url({{ student.avatar_url }}) no-repeat center center / cover">
    </section>

    <section class="details">

        <form method="POST" action="/students?_method=PUT" >

            <h3>Editar membro</h3>

            {% include 'students/fields.njk' %}

            <button id="delete" type="submit" form="form-delete">Deletar</button>

            <input 
                type="hidden" 
                name="id" 
                value="{{ student.id }}"
                >
            
        </form>

        <form id="form-delete" action="/students?_method=DELETE" method="POST">
            <input type="hidden" name="id" value="{{ student.id }}">
        </form>

    </section>
    
</div>

{% include '../confirmation.njk' %}

{% endblock content %}